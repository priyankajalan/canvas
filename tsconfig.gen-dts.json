{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/js",
        "jsx": "react",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "es5",
        "esModuleInterop": true,
    },
    "include": [
        "./src/components/*",
    ],
    "exclude": [
        "./src/**/**.test.tsx",
        "./src/**/**.test.ts",
        "./src/docs/*"
    ]
}